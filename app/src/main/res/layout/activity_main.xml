<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/homePageActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center"
            android:background="@color/purple">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mathematic Converter App"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="center"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@id/homePageActionBar">


        <androidx.cardview.widget.CardView
            android:id="@+id/gramToKiloCardView"
            android:layout_width="160dp"
            android:layout_height="170dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/balance"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gram To KG"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_gravity="bottom"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/inchCardView"
            android:layout_alignParentEnd="true"
            android:layout_width="160dp"
            android:layout_height="170dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/ruler"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inch Convert"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_gravity="bottom"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/celsiusCardView"
            android:layout_below="@id/gramToKiloCardView"
            android:layout_width="160dp"
            android:layout_height="170dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/celsius"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Celsius Convert"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_gravity="bottom"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/timeCardView"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/inchCardView"
            android:layout_width="160dp"
            android:layout_height="170dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/clock"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time Convert"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_gravity="bottom"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dayCardView"
            android:layout_below="@id/celsiusCardView"
            android:layout_width="160dp"
            android:layout_centerInParent="true"
            android:layout_height="170dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/calendar"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Day Convert"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_gravity="bottom"/>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>